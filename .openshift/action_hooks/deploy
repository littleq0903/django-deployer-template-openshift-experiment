#!/bin/bash
# This deploy hook gets executed after dependencies are resolved and the
# build hook has been run but before the application has been started back
# up again.  This script gets executed directly, so it could be python, php,
# ruby, etc.

source ${OPENSHIFT_PYTHON_DIR}virtenv/bin/activate
 
export PYTHON_EGG_CACHE=${OPENSHIFT_PYTHON_DIR}virtenv/lib/python-2.6/site-packages

DJANGO_SETTINGS={{ project_name}}.settings_openshift

echo "Executing 'python ${OPENSHIFT_REPO_DIR}{{ project_name }}/manage.py syncdb --noinput'"
python "$OPENSHIFT_REPO_DIR"{{ managepy }} --settings=$DJANGO_SETTINGS syncdb --noinput

echo "Executing 'python ${OPENSHIFT_REPO_DIR}{{ project_name }}/manage.py make_admin'"
python "$OPENSHIFT_REPO_DIR"{{ managepy }} --settings=$DJANGO_SETTINGS make_admin

echo "Executing 'python ${OPENSHIFT_REPO_DIR}{{ project_name }}/manage.py collectstatic --noinput -v0'"
python "$OPENSHIFT_REPO_DIR"{{ managepy }} --settings=$DJANGO_SETTINGS collectstatic --noinput -v0

